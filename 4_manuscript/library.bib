	year = {2014},
	pmid = {24628427},
	note = {ISBN: 1523-1739},
	keywords = {Forest management, Community analysis, Chihuahua, Cumbres de majalca national park, Occupancy models, Sierra tarahumara, Species richness estimation},
	pages = {1034--1044},
	file = {Carrillo-Rubio et al (2014) Use of multispecies occupancy models to evaluate the response of bird communities to forest degradation associated with logging.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Carrillo-Rubio et al (2014) Use of multispecies occupancy models to evaluate the response of bird communities to forest degradation associated with logging.pdf:application/pdf},
