@article{tattoniCanLiDARData2012,
	title = {Can {LiDAR} data improve bird habitat suitability models?},
	volume = {245},
	issn = {03043800},
	url = {http://dx.doi.org/10.1016/j.ecolmodel.2012.03.020},
