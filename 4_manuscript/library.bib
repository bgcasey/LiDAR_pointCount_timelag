	author = {Neumann, Wiebke and Martinuzzi, Sebastian and Estes, Anna B and Pidgeon, Anna M and Dettki, Holger and Ericsson, Göran and Radeloff, Volker C},
	urldate = {2017-09-07},
	date = {2015},
	pmid = {25941571},
	note = {Publisher: {BioMed} Central},
	keywords = {{LiDAR}, {MODIS}, Landsat, Remote sensing, Animal movement databases, Animal trajectories, Movement patterns, Satellite products, Trade-off resolution},
	file = {Neumann et al (2015) Opportunities for the application of advanced remotely-sensed data in ecological studies of terrestrial animal movement.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Neumann et al (2015) Opportunities for the application of advanced remotely-sensed data in ecological studies of terrestrial animal movement.pdf:application/pdf},
