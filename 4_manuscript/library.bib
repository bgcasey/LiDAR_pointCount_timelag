	author = {Müller, Jörg and Brandl, Roland},
	urldate = {2020-06-08},
	date = {2009-08-01},
	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {Airborne laser scanning, Disturbance, Body size, Canopy surface model, Habitat variables, National park, Terrain surface model},
