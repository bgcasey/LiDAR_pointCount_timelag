	keywords = {Landsat, Forest structure, Forest, Disturbance, Recovery, Fire, Burn severity, {dNBR}, {LIDAR}, {NBR}, Post-fire effects, {RdNBR}, Segmentation},
	file = {Wulder et al (2009) Characterizing boreal forest wildfire with multi-temporal Landsat and LIDAR data.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Wulder et al (2009) Characterizing boreal forest wildfire with multi-temporal Landsat and LIDAR data.pdf:application/pdf},
}

@article{McDermid2009,
	title = {Remote sensing and forest inventory for wildlife habitat assessment},
