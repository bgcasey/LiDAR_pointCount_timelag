	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {Biodiversity, Species richness, candidacy, Accumulation curves, Asymptotic richness, Category-subcategory ratios, Rarefaction, Richness estimation, Species density, Taxon sampling, Taxonomic ratios},
