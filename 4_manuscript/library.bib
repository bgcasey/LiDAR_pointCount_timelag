	author = {Mallory, Conor D. and Boyce, Mark S.},
	urldate = {2020-08-06},
	date = {2019-02-01},
	note = {Publisher: John Wiley and Sons Ltd},
	keywords = {climate change, connectivity, metapopulation, Peary caribou, Rangifer tarandus pearyi, sea ice},
	file = {Mallory & Boyce (2019) Prioritization of landscape connectivity for the conservation of Peary caribou.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Mallory & Boyce (2019) Prioritization of landscape connectivity for the conservation of Peary caribou.pdf:application/pdf},
