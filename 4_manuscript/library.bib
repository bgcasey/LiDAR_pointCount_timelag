	note = {Publisher: Resilience Alliance},
	keywords = {Agriculture, Biotic homogenization, Boreal bird, Community change, Forest conversion, Fragmentation},
	file = {Morissette et al (2019) Regional variation in responses of wetland-associated bird communities to conversion of boreal forest to agriculture.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Morissette et al (2019) Regional variation in responses of wetland-associated bird communities to conversion of boreal forest to agriculture.pdf:application/pdf},
