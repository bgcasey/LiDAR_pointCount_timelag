@article{Kane2010,
  title = {Comparisons between Field-and {{LiDAR-based}} Measures of Stand Structural Complexity},
  author = {Kane, Van R and Mcgaughey, Robert J and Bakker, Jonathan D and Gersonde, Rolf F and Lutz, James A and Franklin, Jerry F},
