	keywords = {Remote sensing, Biodiversity, Habitat, Lidar, Species richness, Abundance, Diversity, Heterogeneity, General additive models, Regression trees},
	file = {Goetz et al (2007) Laser remote sensing of canopy habitat heterogeneity as a predictor of bird species richness in an eastern temperate forest, USA.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Goetz et al (2007) Laser remote sensing of canopy habitat heterogeneity as a predictor of bird species richness in an eastern temperate forest, USA.pdf:application/pdf},
