@article{Vauhkonen,
	title = {Unsupervised classification of airborne laser scanning data to locate potential wildlife habitats for forest management planning},
	volume = {89},
	issn = {14643626},
	url = {https://watermark.silverchair.com/api/watermark?token=AQECAHi208BE49Ooan9kkhW_Ercy7Dm3ZL_9Cf3qfKAc485ysgAAAfQwggHwBgkqhkiG9w0BBwagggHhMIIB3QIBADCCAdYGCSqGSIb3DQEHATAeBglghkgBZQMEAS4wEQQM-AIA882opl6YPI9GAgEQgIIBp94RLxxdexrWRg9TVxXUi4mofd8ig-9aqTqBaFU8AAUnG},
	doi = {10.1093/forestry/cpw011},
	abstract = {To account for ecological objectives in forest management planning,{\textbackslash}npotential habitats need to be mapped, characterized and evaluated for{\textbackslash}nutility in alternative management practices. Airborne laser scanning{\textbackslash}n({ALS}) is increasingly used to derive predictive maps of habitat quality.{\textbackslash}{nUnlike} ecologically driven approaches that require spatially and{\textbackslash}ntemporally co-located training data of the specific species, we tested{\textbackslash}nwhether indicative information on the habitat potential could be{\textbackslash}nobtained by means of an unsupervised classification of {ALS} data. Based{\textbackslash}non a literature review, altogether five {ALS} features quantifying{\textbackslash}nvegetation height, cover and diversity were expected to capture the{\textbackslash}nessential variation in the habitat requirements of western capercaillie{\textbackslash}n(Tetrao urogallus L.) and hazel grouse (Tetrastes bonasia L.), which are{\textbackslash}nthe most important game birds occurring in the studied area. The{\textbackslash}nfeatures were extracted from sparse density, leaf-off {ALS} data at a{\textbackslash}nresolution of 256 m(2) and partitioned using an unsupervised k-means{\textbackslash}nalgorithm. By analysing the persistence of the cluster ensemble formed{\textbackslash}nby the partitioning, altogether 158 plots in 16 structural classes were{\textbackslash}nassigned for field measurements to determine which real-world forest{\textbackslash}nphenomena affected the clustering. The clustering was found to stratify{\textbackslash}nthe area mainly in terms of size-related attributes such as timber{\textbackslash}nvolume and basal area. The understorey, shrub and herb layers had less{\textbackslash}ncorrespondence with the clustering, indicating that an unsupervised{\textbackslash}nclassification is not directly suitable for habitat mapping. The result{\textbackslash}nwas improved using empirical threshold values for the {ALS} features{\textbackslash}ndetermined according to the plots labelled as the most potential{\textbackslash}nhabitats in the field measurements. This semi-supervised classification{\textbackslash}nof the data indicated 4 per cent of the total forest area as suitable{\textbackslash}nfor the specific species, which appears a reasonable estimate of the{\textbackslash}ncore area of the habitats considered. Overall, the partitioning formed{\textbackslash}naggregated, stand-like spatial patterns, even though the neighbourhoods{\textbackslash}nof the individual 256 m(2) cells were not considered at all. The result{\textbackslash}ncould be further refined by spatial optimization to produce indicative{\textbackslash}nmaps for forest management planning with {ALS} as the sole data source.},
