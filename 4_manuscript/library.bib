@article{bettsExtinctionFiltersMediate2019,
	title = {Extinction filters mediate the global effects of habitat fragmentation on animals},
	volume = {366},
	issn = {0036-8075},
	url = {http://www.sciencemag.org/lookup/doi/10.1126/science.aax9387},
