{ISBN}: 0034-4257},
	keywords = {{LiDAR}, Landsat, Avian nesting guilds, Forest birds, Predictive maps, Species richness modeling},
	file = {Vogeler et al (2014) Terrain and vegetation structural influences on local avian species richness in two mixed-conifer forests.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Vogeler et al (2014) Terrain and vegetation structural influences on local avian species richness in two mixed-conifer forests.pdf:application/pdf},
