	author = {Asbeck, Thomas and Messier, Christian and Bauhus, Jürgen},
	urldate = {2020-07-27},
	date = {2020},
	note = {Publisher: Springer},
	keywords = {Retention forestry, Clark–Evans index, Selection of habitat trees, Size of convex hull, Tree-related microhabitats},
