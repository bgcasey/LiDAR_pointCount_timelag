	author = {Grinde, Alexis R and Niemi, Gerald J},
	year = {2016},
	keywords = {habitat use, LiDAR, occupancy, forest, Canada Warbler, avian conservation, landscape, chapter 1, competition, forest management mechanisms},
	pages = {513--531},
	file = {Grinde & Niemi (2016) Influence of landscape, habitat, and species co-occurrence on occupancy dynamics of Canada Warblers.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Grinde & Niemi (2016) Influence of landscape, habitat, and species co-occurrence on occupancy dynamics of Canada Warblers.pdf:application/pdf},
