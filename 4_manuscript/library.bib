@article{Renner2018,
  title = {Divergent Response to Forest Structure of Two Mobile Vertebrate Groups},
  author = {Renner, Swen C. and {Suarez-Rubio}, Marcela and Kaiser, Sonja and Nieschulze, Jens and Kalko, Elisabeth K.V. V and Tschapka, Marco and Jung, Kirsten},
  year = {2018},
