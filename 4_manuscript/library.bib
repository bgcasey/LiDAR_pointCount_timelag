Place: {ST} {ALBAN}-{ANLAGE} 66, {CH}-4052 {BASEL}, {SWITZERLAND}},
	keywords = {wetland; remote sensing; optical sensor; radar; Li},
}

@article{ghiyamatReviewHyperspectralRemote2010,
