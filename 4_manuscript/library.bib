ISBN: 0378-1127},
	keywords = {Boreal birds, Community structure, Niche characteristics, Niche position, Oil sands areas, Outlying Mean Index},
	pages = {99--116},
	file = {Mahon et al (2016) Community structure and niche characteristics of upland and lowland western boreal birds at multiple spatial scales.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Mahon et al (2016) Community structure and niche characteristics of upland and lowland western boreal birds at multiple spatial scales.pdf:application/pdf},
