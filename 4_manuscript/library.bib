	author = {White, Joanne C. and Saarinen, Ninni and Kankare, Ville and Wulder, Michael A. and Hermosilla, Txomin and Coops, Nicholas C. and Pickell, Paul D. and Holopainen, Markus and Hyyppä, Juha and Vastaranta, Mikko},
	urldate = {2021-05-03},
