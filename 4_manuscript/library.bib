	urldate = {2021-04-19},
	date = {2021},
	note = {Publisher: Blackwell Publishing Ltd},
	keywords = {landscape ecology, Acrocephalus, active remote sensing, ecological niche, Locustella, wetland restoration},
	file = {Koma et al (2021) Niche separation of wetland birds revealed from airborne laser scanning.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Koma et al (2021) Niche separation of wetland birds revealed from airborne laser scanning.pdf:application/pdf},
