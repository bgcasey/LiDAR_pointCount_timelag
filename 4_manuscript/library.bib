	author = {Halpern, Charles B and Halaj, Juraj and Evans, Shelley A and Dovč Iak, Martin},
	urldate = {2017-11-08},
	date = {2012},
	keywords = {{USA}, forest management, early-seral species, green-tree retention, late-seral herbs, Pacific Northwest, species diversity, structural retention, understory dynamics, variable retention},
	file = {Halpern et al (2012) Level and pattern of overstory retention interact to shape long-term responses of understories to timber harvest.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Halpern et al (2012) Level and pattern of overstory retention interact to shape long-term responses of understories to timber harvest.pdf:application/pdf},
