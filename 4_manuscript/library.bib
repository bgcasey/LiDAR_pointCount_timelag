	urldate = {2020-07-13},
	date = {2020-04-01},
	note = {Publisher: {MDPI} {AG}},
	keywords = {Multispectral, {UAS}, {UAV}, Vegetation, Aboveground biomass, {AGB}, {RGB} imagery, Unmanned Aerial System},
	file = {Poley & McDermid (2020) A systematic review of the factors influencing the estimation of vegetation aboveground biomass using unmanned aerial systems.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Poley & McDermid (2020) A systematic review of the factors influencing the estimation of vegetation aboveground biomass using unmanned aerial systems.pdf:application/pdf},
