	issue = {July},
	journaltitle = {Biological Conservation},
	author = {Kortmann, Mareike and Heurich, Marco and Latifi, Hooman and Roesner, Sascha and Seidl, Rupert and Mueller, Joeg and Thorn, Simon and Rösner, Sascha and Seidl, Rupert and Müller, Jörg and Thorn, Simon},
