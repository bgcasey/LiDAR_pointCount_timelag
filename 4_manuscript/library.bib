	number = {1},
	journaltitle = {Diversity and Distributions},
	author = {Elith, Jane and Phillips, Steven J. and Hastie, Trevor and Dudík, Miroslav and Chee, Yung En and Yates, Colin J.},
	date = {2011},
	pmid = {15204886},
	note = {{ISBN}: 1472-4642},
	keywords = {Absence, Ecological niche, Entropy, Machine learning, Presence-only, Species distribution model},
	file = {Elith et al (2011) A statistical explanation of MaxEnt for ecologists.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Elith et al (2011) A statistical explanation of MaxEnt for ecologists.pdf:application/pdf},
