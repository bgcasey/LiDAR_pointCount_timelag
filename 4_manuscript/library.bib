	author = {Moudrý, Vítězslav and Moudrá, Lucie and Barták, Vojtěch and Bejček, Vladimír and Gdulová, Kateřina and Hendrychová, Markéta and Moravec, David and Musil, Petr and Rocchini, Duccio and Šťastný, Karel and Volf, Ondřej and Šálek, Miroslav},
