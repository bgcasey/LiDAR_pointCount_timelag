	keywords = {Ecology, Lidar, Signal processing, Understorey, Urban, Vegetation, Waveform},
	file = {Hancock et al (2017) Measurement of fine-spatial-resolution 3D vegetation structure with airborne waveform lidar - Calibration and validation with voxelised terrestrial lidar.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Hancock et al (2017) Measurement of fine-spatial-resolution 3D vegetation structure with airborne waveform lidar - Calibration and validation with voxelised terrestrial lidar.pdf:application/pdf},
