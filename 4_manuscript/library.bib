  keywords = {caribou,GARP,habitat suitability index,Mahalanobis distance,resource selection function,scrivener},
  file = {/Volumes/GoogleDrive/My Drive/PhD/zotero/library/Johnson & Gillingham (2005) An evaluation of mapped species distribution models used for conservation planning.pdf}
