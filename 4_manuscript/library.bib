	note = {Publisher: {MDPI} {AG}},
	keywords = {Landsat, Burn severity, Composite burn index, Forest fire, Normalized burn ratio, {UAS}, {UAV}, Unmanned aerial vehicle},
	file = {Fraser et al (2017) Calibrating satellite-based indices of burn severity from UAV-derived metrics of a burned boreal forest in NWT, Canada.pdf:/Users/brendancasey/Library/CloudStorage/GoogleDrive-bgcasey@ualberta.ca/My Drive/PhD/zotero/library/Fraser et al (2017) Calibrating satellite-based indices of burn severity from UAV-derived metrics of a burned boreal forest in NWT, Canada.pdf:application/pdf},
